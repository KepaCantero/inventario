<div class="ui top attached block header">
  <div class="ui two column grid">
    <div class="column">
      <h2>
        {{title}}
      </h2>

    </div>
  </div>
</div>
<div class="ui attached very padded segment">
  <div class="ui statistics">
    <div class="ui horizontal statistic">
      <div class="label">
        Fecha
      </div>
      <div class="value">
        {{salida.fecha}}
      </div>
    </div>
    <div class="ui horizontal statistic">
      <div class="label">
        Producto
      </div>
      <div class="value">
        {{salida.receta_id.nombre}}
      </div>

    </div>
    <div class="ui horizontal statistic">
      <div class="label">
        cantidad
      </div>
      <div class="value">
        {{salida.cantidad}}
      </div>
    </div>
  </div>
</div>
<div class="ui two bottom attached buttons">
  <a href="{{salida.url}}/delete" class="ui negative basic button">
    Delete Item
  </a>
</div>
