<div class="ui top attached block header">
  <h2>
    {{title}}
  </h2>
</div>
<div class="ui attached bottom segment">
  <form id="receta_from" class="ui form" method="POST" action="" enctype="multipart/form-data">
    <div class="field">
      <label>
        Fecha
      </label>
      <input type="date" name="fecha" placeholder="Fecha" />
    </div>
    <div class="field">
      <label>
        Receta
      </label>
      <div class="ui selection dropdown">
        <input type="hidden" name="receta_id" />
        <i class="dropdown icon"></i>
        <div class="default text">
          Receta
        </div>
        <div class="menu">
          {{#each recetas}}
          <div class="item" data-value={{this._id}}>
            {{this.nombre}}
          </div>
          {{/each}}
        </div>
      </div>
    </div>
    <div class="field">
      <label>
        Cantidad
      </label>
      <input type="Number" name="cantidad" placeholder="Cantidad" value="{{#if item}}{{item.cantidad}}{{/if}}" />
    </div>

</div>
<button class="ui button" type="submit">
  Submit
</button>
<div class="ui error message"></div>
</form>
</div>
<script>
  $(document).ready(() => {
    $('.ui.selection.dropdown')
      .dropdown('set selected', "{{item.category}}");
  });
</script>
